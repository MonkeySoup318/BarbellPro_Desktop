<UserControl
    x:Class="BarbellPro.Application.Views.CalculatorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:cstm="clr-namespace:BarbellPro.Application.Views.CustomUIElements"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enm="clr-namespace:BarbellPro.Application.Models.Enums"
    xmlns:local="clr-namespace:BarbellPro.Application.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:BarbellPro.Application.ViewModels"
    d:DesignWidth="1000"
    d:DesignHeight="700"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewModels:CalculatorViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <ObjectDataProvider
            x:Key="getGenderFromEnum"
            MethodName="GetValues"
            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enm:Gender" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <!--  Main Grid  -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Inner Grid left side  -->
        <Border
            Grid.Column="0"
            Background="#444444"
            BorderThickness="1"
            CornerRadius="8">
            <DockPanel Margin="0,20,0,20">
                <StackPanel Orientation="Horizontal">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="75" />
                            <ColumnDefinition Width="400" />
                        </Grid.ColumnDefinitions>
                        
                        <!--  Image Empty Barbell  -->
                        <Image
                            Grid.ColumnSpan="2"
                            HorizontalAlignment="Left"
                            Source="{Binding EmptyBarbellImage}"
                            Stretch="None" />

                        <!--  Weight Plates ImageCollection  -->
                        <StackPanel
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <ItemsControl ItemsSource="{Binding ImageCollection}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </DockPanel>
        </Border>

        <!--  Inner Grid right side  -->
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition Height="70" />
                <RowDefinition Height="70" />
                <RowDefinition Height="70" />
                <RowDefinition Height="70" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Grid.RowSpan="5"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Background="#444444"
                BorderThickness="1"
                CornerRadius="8" />

            <!--  Gender  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="10,0,0,0"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#ffffff"
                VerticalAlignment="Center"
                Text="Select Gender:" />

            <ComboBox
                Name="cbGenderSelect"
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,0,0,0"
                ItemsSource="{Binding Source={StaticResource getGenderFromEnum}, UpdateSourceTrigger=PropertyChanged}"
                SelectedValue="{Binding SelectedGender, UpdateSourceTrigger=PropertyChanged}"
                Style="{DynamicResource ComboBoxStyle1}" />

            <!--  Weight  -->
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="10,0,0,0"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#ffffff"
                VerticalAlignment="Center"
                Text="Weight (in kg):" />

            <cstm:UserInputWeightTB
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,0,0,0"
                Style="{DynamicResource CalculatorTextBoxStyle}"
                Text="{Binding InputWeight, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Has Tournament Clip  -->
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Margin="10,0,0,0"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#ffffff"
                VerticalAlignment="Center"
                Text="Tournament clip:" />

            <CheckBox
                Name="chHasClip"
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,0,15,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                IsChecked="{Binding HasClip, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Calculate Weight Plates  -->
            <Button
                Name="btnCalculate"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Command="{Binding CalculateCommand}"
                Content="Calculate Weight Plates"
                FontSize="14"
                FontWeight="Bold"
                Style="{DynamicResource CalculatorRunButtonStyle}" />

            <!--  Reset Weights Plates  -->
            <Button
                Name="btnReset"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Command="{Binding ResetViewCommand}"
                Content="Reset"
                Style="{DynamicResource CalculatorResetButtonStyle}" />

            <Border
                Grid.Row="5"
                Grid.RowSpan="5"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Background="#444444"
                BorderThickness="1"
                CornerRadius="8" />

